                <Button Click="Button_Click" Content="Select" Foreground="White" Background="Navy" FontSize="30" FontFamily="Arial" FontWeight="Bold" Width="200" Height="50" Grid.Column="1" Margin="210,407,10,10" Grid.Row="1">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Image Grid.Column="1" HorizontalAlignment="Center" Height="393" Grid.Row="1" VerticalAlignment="Top" Width="420"  Stretch="Fill" Source="/realistic-international-plastic-driver-licence-600w-263677043.png"/>
