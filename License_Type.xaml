                <RadioButton x:Name="r8" Foreground="Black" FontSize="20" HorizontalContentAlignment="Center"  Margin="0,261,0,181" Grid.Row="1" FontFamily="Arial" FontWeight="Bold" Width="226" Height="25" HorizontalAlignment="Center">D1</RadioButton>
                <RadioButton x:Name="r9" Foreground="Black" FontSize="20" HorizontalContentAlignment="Center"  Margin="0,291,0,151" Grid.Row="1" FontFamily="Arial" FontWeight="Bold" Width="226" Height="25" HorizontalAlignment="Center">D</RadioButton>
