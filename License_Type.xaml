                <RadioButton x:Name="r3" Foreground="Black" FontSize="20" HorizontalContentAlignment="Center" Margin="0,112,0,330" Grid.Row="1" FontFamily="Arial" FontWeight="Bold" HorizontalAlignment="Center" Width="226" Height="25">B1</RadioButton>
                <RadioButton x:Name="r4" Foreground="Black" FontSize="20" HorizontalContentAlignment="Center" Margin="0,142,0,300" Grid.Row="1" FontFamily="Arial" FontWeight="Bold" HorizontalAlignment="Center" Width="226" Height="25">B</RadioButton>
                <RadioButton x:Name="r5" Foreground="Black" FontSize="20" HorizontalContentAlignment="Center"  Margin="0,172,0,270" Grid.Row="1" FontFamily="Arial" FontWeight="Bold" HorizontalAlignment="Center" Width="226" Height="25">C1</RadioButton>
                <RadioButton x:Name="r6" Foreground="Black" FontSize="20" HorizontalContentAlignment="Center"  Margin="0,202,0,240" Grid.Row="1" FontFamily="Arial" FontWeight="Bold" HorizontalAlignment="Center" Width="226" Height="25">C</RadioButton>
